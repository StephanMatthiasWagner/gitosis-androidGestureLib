<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp" >

   <EditText android:id="@+id/edit_message"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:inputType="number"
             android:hint="@string/edit_message" android:layout_alignLeft="@+id/ligAdView"
             android:layout_below="@+id/textView"/>

   <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/button_refresh"
      android:id="@+id/refreshButton"
      android:layout_alignLeft="@+id/textView" android:layout_alignParentTop="true" android:layout_marginTop="55dp"/>

   <com.ligatus.android.adframework.LigAdView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:id="@+id/ligAdView"
                                   android:clickable="true"
                                   android:layout_height="300dp"
                                   android:layout_width="250dp"
                                   android:layout_gravity="left|center_vertical"
                                   android:padding="0dp"
                                   android:layout_alignParentBottom="true"
                                   android:layout_alignParentLeft="true"
           />

</RelativeLayout>